# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
ENVIRONMENT=development

# CORS Settings
# JSON array format for Pydantic list parsing
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# LLM Provider Settings
# Options: mock, openai, anthropic, vercel
LLM_PROVIDER=mock

# LLM API Configuration (for real LLM providers)
# Leave empty when using mock provider
LLM_API_KEY=
LLM_MODEL=gpt-4

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
